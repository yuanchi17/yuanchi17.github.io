doctype html
block beforehtml
html
  head
    title= title
    link(rel="icon" href="https://i.imgur.com/uvL7e25.png" type="image/x-icon")
    meta(name="description" content="Yuan Chi")
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, viewport-fit=cover, user-scalable=no")
    meta(property="og:image:height", content="256")
    meta(property="og:image:width", content="256")
    meta(property="og:image" content="https://i.imgur.com/5HW3ZHE.png")
    script.
      (function () {
        const host = location.host.split(':')[0]
        if (host === 'localhost') document.write(`<script src="http://${host}:35729/livereload.js?snipver=1"></` + 'script>')
      })()
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/font-awesome@4/css/font-awesome.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/vue-ctk-date-time-picker@2/dist/vue-ctk-date-time-picker.min.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css")
    
  body
    block style
    style
      :sass
        *
          font-family: 'Source Sans Pro', Helvetica, Arial, 'PingFang TC', 'Microsoft JhengHei', '微軟正黑體', sans-serif
          letter-spacing: 0.8px
        body
          margin-top: 55px
    block gtag
      include /gtag
    block content
    script(src="https://cdn.jsdelivr.net/npm/axios@0.20.0/dist/axios.min.js")
    script(src="https://cdn.jsdelivr.net/npm/jquery@3/dist/jquery.min.js")
    script(src="https://cdn.jsdelivr.net/npm/lodash@4/lodash.min.js")
    script(src="https://cdn.jsdelivr.net/npm/papaparse@5/papaparse.min.js")
    script(src="https://cdn.jsdelivr.net/npm/popper.js@1/dist/umd/popper.min.js")
    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.all.min.js")
    script(src="https://cdn.jsdelivr.net/npm/vue-ctk-date-time-picker@2/dist/vue-ctk-date-time-picker.umd.min.js")
    script(src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.min.js")
    //- 在導入 bootstrap 前需先導入 jquery, popper
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@4/dist/js/bootstrap.min.js")
    block script
