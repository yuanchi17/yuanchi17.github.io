extends layout

block beforehtml
  - const title = "YUAN"

block style
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=PT+Serif:wght@400;700&display=swap">
  style
    :sass
      [v-cloak]
        display: none
      $color_blue: #78D0FF
      $color_white: #ffffff
      $font_size_small: 14px

      body 
        background-color: $color_blue
      @mixin size($w, $h)
        width: $w
        height: $h
      @keyframes open
        0%
          +size(20px, 250px)
        10%
          +size(20px, 250px)
        100%
          +size(400px, 250px)

      #app
        height: 100%
        img
          width: 250px
          height: 250px
          object-fit: cover
          border-radius: 50%
        .row
          height: 100%
      
      .contact
        a
          font-size: 28px
          color: rgba(gray, 0.7)
          i:hover
            color: gray

      section#home
        h1
          color: $color_white
        .contact
          a
            font-size: 28px
            color: rgba(gray, 0.7)
            i:hover
              color: gray
        #title
          .title-name 
            font-family: 'PT Serif', serif
          hr
            border-color: white
            border-top-width: 2px
          @media only screen and (max-width:360px)
            hr
              display: none
        .more
          font-weight: initial
          color: $color_white
          font-size: 23px
          hr
            transform: rotate(90deg)
            border-top: solid 1px $color_white

      section#home-vcard
        p, span, a
          color: rgba(white, 0.7)
          font-size: $font_size_small
          font-weight: 400
        .name
          color: $color_blue
          font-weight: 400
        .card
          +size(400px, 250px)
          animation: open 2s both
          background-color: #333
          border-radius: 6px
          border: none
          box-shadow: 0px 0px 5px 3px rgba(black, 0.3)
          overflow: hidden
          transition: 1s
          & .tri
            +size(150px, 200px)
            background-color: darken(#333, 3)
            position: absolute
            &.tri1
              bottom: 0px
              transform: rotate(-18deg) translate(-85%, -5%)
            &.tri2
              right: 8px
              top: 0px
              transform: rotate(-18deg) translate(85%, 5%)
          & .texts
            .vcard-title
              color: rgba($color_blue, 0.5)
              font-weight: bold
            .vcard-body
              border-top: solid 1px
              line-height: 20px
          a
            bottom: 0px
            right: 0px
            color: rgba($color_blue, 0.5)
            font-size: $font_size_small
            position: absolute

      section#home-footer
        h4
          color: rgba(gray, 0.7)
        h4:hover, i:hover
          color: gray

block content
  include /navbar
  #app.content(v-cloak)
    section#home.d-flex.flex-column.align-items-center
      img.mt-4.mb-3.animate__animated.animate__fadeIn.animate__delay-1s(src="https://i.imgur.com/f4j0B1I.jpg", alt="個人照片")
      #title.d-flex.justify-content-center.w-100
        hr.w-25.my-auto.mx-0
        h1.m-0.mx-3.animate__animated.animate__rotateIn.title-name Y U A N
        hr.w-25.my-auto.mx-0
      .contact.animate__animated.animate__fadeIn.animate__delay-1s
        a.mx-1(href="https://www.youtube.com/channel/UC0Wem7bts97LKT-2mb3c4Kg" target="_blank")
          i.fa.fa-youtube-square
        a.mx-1(href="https://github.com/yuanchi17" target="_blank")
          i.fa.fa-github-square
        a.mx-1(href="mailto:joyceleeya@gmail.com" target="_blank")
          i.fa.fa-envelope-square

    section#home-vcard.py-3.d-flex.flex-column.align-items-center
      .card
        .texts.p-5
          h2.name.m-0.px-1 Yuan-Chi Lee
          p.vcard-title.m-0.p-1.pb-2 {{ vcard.company }} {{ vcard.position }}
          p.vcard-body.m-0.px-1.pt-2 {{ vcard.text }}
        a.mb-2.mr-3(href="/works/", target="_blank" style="text-decoration: none")
          i.fa.fa-hand-o-right
          span.pl-1 作品集
        .tri.tri1
        .tri.tri2

block script
  script.
    const vm = new Vue({ // eslint-disable-line no-unused-vars
      el: '#app',
      data: {
        vcard: {
          title: 'L Y C',
          company: '李家愛放屁',
          position: '老么',
          text: '畢業於 逢甲大學應用數學系，學過 Python，因興趣開始自學網頁設計程式，希望能讓更多人看到自己的作品！',
        },
      },
      async mounted () {
        await this.init()
      },
      methods: {
        async getCsv (url) {
          const csv = _.trim(_.get(await axios.get(url), 'data')) // _.trim：把前後多餘的空格修掉
          return _.get(Papa.parse(csv, {
            encoding: 'utf8',
            header: true,
          }), 'data', [])
        },
        async init () {
          try {
            const res = await this.getCsv('https://gist.githubusercontent.com/yuanchi17/df7bdf185fd61b39f5c585e78ea39cc9/raw/yuanchi-intro.csv')
            this.$set(this, 'vcard', res[0])
          } catch (err) {
            console.log(err)
            throw err
          }
        },
      },
    })

