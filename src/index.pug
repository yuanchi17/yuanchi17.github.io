extends layout

block beforehtml
  - const title = "YUAN"

block style
  style
    :sass
      [v-cloak]
        display: none
      $color_blue: #78D0FF
      $color_white: #ffffff
      $font_size_small: 14px

      @mixin size($w, $h)
        width: $w
        height: $h
      @keyframes open
        0%
          +size(20px, 250px)
        10%
          +size(20px, 250px)
        100%
          +size(400px, 250px)

      #app
        height: 100%
        img
          width: 250px
          height: 250px
          object-fit: cover
          border-radius: 50%

      section#home
        height: calc(100vh - 55px)
        background-color: $color_blue
        h1
          color: $color_white
      #button-area
        max-width: 250px
        width: 60%
        & .btn
          background-color: #ffffff30
          border-radius: 0px
          border: solid 2px #ffffff
          color: #333
          filter: drop-shadow(0px 0px 4px #ffffff80)
          font-weight: bold
          height: 45px
          &:hover
            transform: scale(1.1)
            transition: 0.5s


block content
  include /navbar
  #app.content(v-cloak)
    section#home.min-vh-100.d-flex.flex-column.align-items-center
      img.mt-4.mb-3.animate__animated.animate__fadeIn.animate__delay-1s(src="https://i.imgur.com/f4j0B1I.jpg", alt="個人照片")
      h1.m-0.text-center.animate__animated.animate__rotateIn — YUAN —
      #button-area.d-flex.flex-column.my-3.animate__animated.animate__fadeIn.animate__delay-1s
        a.btn.btn-block.my-2.px-3.d-flex(href="https://store.line.me/stickershop/author/2723630/zh-Hant" target="_blank"): p.my-auto.mx-auto LINE 貼圖
        a.btn.btn-block.my-2.px-3.d-flex(href="https://www.youtube.com/channel/UC0Wem7bts97LKT-2mb3c4Kg" target="_blank"): p.my-auto.mx-auto YouTube
        a.btn.btn-block.my-2.px-3.d-flex(href="https://github.com/yuanchi17" target="_blank"): p.my-auto.mx-auto GitHub
        a.btn.btn-block.my-2.px-3.d-flex(href="mailto:joyceleeya@gmail.com" target="_blank"): p.my-auto.mx-auto Email

block script
  script.
    const vm = new Vue({ // eslint-disable-line no-unused-vars
      el: '#app',
      data: {
        vcard: {
          title: 'L Y C',
          company: '李家愛放屁',
          position: '老么',
          text: '畢業於 逢甲大學應用數學系，學過 Python，因興趣開始自學網頁設計程式，希望能讓更多人看到自己的作品！',
        },
      },
      async mounted () {
        await this.init()
      },
      methods: {
        async getCsv (url) {
          const csv = _.trim(_.get(await axios.get(url), 'data')) // _.trim：把前後多餘的空格修掉
          return _.get(Papa.parse(csv, {
            encoding: 'utf8',
            header: true,
          }), 'data', [])
        },
        async init () {
          try {
            const res = await this.getCsv('https://gist.githubusercontent.com/yuanchi17/df7bdf185fd61b39f5c585e78ea39cc9/raw/yuanchi-intro.csv')
            this.$set(this, 'vcard', res[0])
          } catch (err) {
            console.log(err)
            throw err
          }
        },
        scrollTo (height) {
          window.scrollTo({ top: height, behavior: 'smooth'})
        }
      },
    })

